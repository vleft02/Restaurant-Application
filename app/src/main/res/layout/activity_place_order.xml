<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_minimalist"
    android:backgroundTintMode="src_over"
    tools:context="gr.aueb.softeng.view.Customer.PlaceOrder.PlaceOrderActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/DishRecyclerView"
        android:layout_width="389dp"
        android:layout_height="496dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/PlaceOrdersButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/PlaceOrdersButton"
        android:layout_width="122dp"
        android:layout_height="53dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/button_gradient2"
        android:text="@string/place_order2"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/NoDishes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_dishes_are_available4"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/CartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/cartbutton"
        app:layout_constraintBottom_toTopOf="@+id/DishRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.363"
        app:srcCompat="@drawable/cart__1_" />
</androidx.constraintlayout.widget.ConstraintLayout>