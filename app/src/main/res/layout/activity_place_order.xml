<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    android:backgroundTint="#B4F6F6F6"
    android:backgroundTintMode="src_over"
    tools:context="gr.aueb.softeng.view.Customer.PlaceOrder.PlaceOrderActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/DishRecyclerView"
        android:layout_width="389dp"
        android:layout_height="496dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/PlaceOrdersButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/TableNumberEditText"
        android:layout_width="78dp"
        android:layout_height="56dp"
        android:ems="10"
        android:hint="Number"
        android:inputType="number"
        android:textAlignment="viewStart"
        android:textColorHint="#656464"
        app:layout_constraintBottom_toTopOf="@+id/DishRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.273"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.537" />

    <TextView
        android:id="@+id/tableNumberTextView"
        android:layout_width="79dp"
        android:layout_height="60dp"
        android:text="Table Number: "
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/TableNumberEditText"
        app:layout_constraintEnd_toStartOf="@+id/TableNumberEditText"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/PlaceOrdersButton"
        android:layout_width="122dp"
        android:layout_height="53dp"
        android:layout_marginBottom="36dp"
        android:background="#D0DD883D"
        android:text="Place Order"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/NoDishes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No dishes are available :("
        android:textColor="#020202"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>